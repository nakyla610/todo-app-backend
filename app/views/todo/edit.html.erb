    <input class="text-input" id="new-pomodoro-estimate" name= "pomodoro_estimate" type="number" value="<%= @todo.pomodoro_estimate %>">
    <input class="text-input" id="add-new-todo-button" type= "submit" value="Edit todo">
</form>